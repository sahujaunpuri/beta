<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eceff1"
    android:id="@+id/container"
    tools:context=".ads.CustomInterstitialActivity">

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        android:background="@drawable/close" />

    <LinearLayout
        android:id="@+id/info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/infoButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="4dp"
            app:srcCompat="@drawable/info" />

        <TextView
            android:id="@+id/info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/infoButton"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="6dp"
            android:layout_toRightOf="@+id/infoButton"
            android:text="Ads By AdFendo"
            android:textColor="@android:color/white"
            android:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/custom_ad_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/text_view_description"
        android:layout_below="@+id/info_layout" />

    <TextView
        android:id="@+id/text_view_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/install_button"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:padding="16dp"
        android:textAppearance="?android:textAppearanceMedium" />

    <Button
        android:id="@+id/install_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_background" />
</RelativeLayout>